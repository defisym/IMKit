{
	"title": "JSON schema for internationalization configuration files",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"description": "Animation",
	"required": [
		"language",
		"internationalization"
	],
	"properties": {
		"language": {
			"type": "array",
			"description": "declare the supported language local codes",
			"items": {
				"type": "string"
			}
		},
		"internationalization": {
			"type": "array",
			"description": "tokens",
			"items": {
				"type": "object",
				"description": "internationalization",
				"required": [
					"token",
					"language"
				],
				"properties": {
					"token": {
						"type": "string",
						"description": "token to translate"
					},
					"language": {
						"type": "array",
						"description": "internationalization strings",
						"items": {
							"type": "object",
							"description": "internationalization string"
						}
					}
				}
			}
		}
	}
}